{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.3",
    "body": [
        {
            "type": "Container",
            "items": [
                {
                    "type": "TextBlock",
                    "text": "Plugin: Trivy Vulnerability Report",
                    "size": "Large",
                    "weight": "Bolder",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "${SUBTITLE}",
                    "isSubtle": true,
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "ColumnSet",
                    "columns": [
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Critical",
                                    "color": "Attention",
                                    "horizontalAlignment": "Center"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": " ${CRITICAL_COUNT} ",
                                    "color": "Attention",
                                    "spacing": "Small",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "High",
                                    "color": "Warning",
                                    "horizontalAlignment": "Center"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": " ${HIGH_COUNT} ",
                                    "color": "Warning",
                                    "spacing": "Small",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Medium",
                                    "color": "Accent",
                                    "horizontalAlignment": "Center"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": " ${MEDIUM_COUNT} ",
                                    "color": "Accent",
                                    "spacing": "Small",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        },
                        {
                            "type": "Column",
                            "width": "auto",
                            "items": [
                                {
                                    "type": "TextBlock",
                                    "text": "Low",
                                    "color": "Good",
                                    "horizontalAlignment": "Center"
                                },
                                {
                                    "type": "TextBlock",
                                    "text": " ${LOW_COUNT} ",
                                    "color": "Good",
                                    "spacing": "Small",
                                    "horizontalAlignment": "Center"
                                }
                            ],
                            "verticalContentAlignment": "Center"
                        }
                    ],
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "TextBlock",
                    "text": "${CRITICAL_FINDINGS}",
                    "wrap": true,
                    "spacing": "ExtraLarge"
                },
                {
                    "type": "TextBlock",
                    "text": "${HIGH_FINDINGS}",
                    "wrap": true,
                    "spacing": "ExtraLarge"
                },
                {
                    "type": "TextBlock",
                    "text": "${MEDIUM_FINDINGS}",
                    "wrap": true,
                    "spacing": "ExtraLarge"
                },
                {
                    "type": "TextBlock",
                    "text": "This report only displays Medium and above findings.\n\n To get the full results, review the build log or run the plugin locally.",
                    "wrap": true,
                    "spacing": "ExtraLarge"
                }
            ],
            "style": "emphasis"
        }
    ]
}
